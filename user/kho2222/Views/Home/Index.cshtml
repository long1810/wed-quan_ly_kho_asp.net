    <!-- -----------featured prodduct------------ -->
    <div class="small-container">
        <h2 class="title">Hàng Lổi trội</h2>
        <div class="row">

            @foreach (var item in Model)
            {
                if (item.gia > 25000000)
                {
                    <div class="col-4">
                        <a href="#" style="text-decoration:none;">
                            <img src="~/@item.anh">
                            @*<img src="~/@item.anh" class="card-img-top" style="width:70%; height:160px; margin-left:15%" />*@
                            <h4>  @Html.DisplayFor(modelItem => item.tenHG)</h4>
                            <div class="rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-o"></i>
                            </div>
                            <p> Giá: @(string.Format("{0:#,##0}",item.gia))  Vnđ</p>
                            <a class="btn btn-primary" style="color:#ffffff" href="~/hangs/Details?id=@item.maHG">Xem </a>
                            <a class="btn btn-primary" style="color:#ffffff" href="~/ChonHang/muahang?id=@item.maHG.ToString()"> Chọn </a>
                        </a>
                    </div>
                }
            }
        </div>
        @*product*@
        <h2 class="title"> Hàng ưu đãi</h2>
        <div class="row">
            @foreach (var item in Model)
            {
