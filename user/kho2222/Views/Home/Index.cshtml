                    <h3>CHÍNH XÁC</h3>
                </div>
            </div>
        </div>
    </section>



    <!-- -----------featured ------------ -->
    <div class="categories" id="categories">
        <div class="small-container">
            <div class="row">
                <div class="col-3">
                    <img src="~/Themes/images/b4.jpg">
                </div>
                <div class="col-3">
                    <img src="~/Themes/images/b5.jpg">
                </div>
                <div class="col-3">
                    <img src="~/Themes/images/b6.jpg">
                </div>
            </div>
        </div>
